<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3 listing-card">
            <h3><%=listing.title%></h3>
            </div>
            <div class="cards col-6 offset-3 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <br>
                       <b> <%=listing.description%> </b> <br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                                <%=listing.location%> <br>
                                    <%=listing.country%> <br>
                    </p>
                </div>
            </div>
        </div>

       
            <div class="btns mt-4">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>

            <form method="post" action="/listings/<%=listing._id%>?_method=Delete" >
                <button class="btn btn-dark delete-btn offset-5">Delete</button>
            </form>
            </div>
<hr>
            <div class="col-8 offset-3 mt-3">
                <h4>Leave a review</h4>
                <form method="post" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
                    <div>
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" name="review[rating]" id="rating" class="form-control"  class="form-range" min="0" max="5">
                    </div>
                    <div>
                        <label for="comments" class="form-label">Comments</label>
                        <textarea name="review[comments]" id="comments" rows="5" cols="30" class="form-control" required></textarea>
                        <div class="invalid-feedback">Add comments</div>
                    </div>
                    <br>
                    <button class="btn btn-outline-dark">Sumbit</button>
                </form>
            </div>
<hr>
            <div class="row offset-3">
                <h4>All reviews</h4> 
                <br><br>
            <% for(review of listing.reviews){ %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Joe</h5>
                        <p class="card-text"><%= review.rating %> &#11088;</p>
                        <p class="card-text"><%= review.comments %></p>
                        <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-outline-dark">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        <br><br>
    </body>